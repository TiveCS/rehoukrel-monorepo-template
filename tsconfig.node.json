{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Node.js/Bun runtime specific settings
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "bundler",

    // Bun runtime types
    "types": ["bun-types"],

    // Node.js interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
